<body>
    <h1>Edit Animal</h1>
    <form action="/animal/<%=id%>" method="post">
        <div>
            <label>Name</label>
            <input type="text" name="name">
        </div>
        <div>
            <label>Description</label>
            <input type="text" name="description">
        </div>
        <button class="btn btn-primary">Add</button>
    </form>
    
</body>
